<Window x:Class="RemoteManager.Views.JsonEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="servers.json"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="保存"
                    Width="80"
                    Margin="0,0,5,0"
                    Click="Save_Click"/>
            <Button Content="关闭"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>

        <TextBox x:Name="JsonTextBox"
                 FontFamily="Consolas"
                 FontSize="13"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"/>
    </DockPanel>
</Window>
