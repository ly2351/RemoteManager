<Window x:Class="RemoteManager.Views.ServerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="服务器信息"
        Width="300"
        Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <!-- 定义五行 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 名称 -->
            <RowDefinition Height="Auto"/>
            <!-- 地址 -->
            <RowDefinition Height="Auto"/>
            <!-- 用户名 -->
            <RowDefinition Height="Auto"/>
            <!-- 密码 -->
            <RowDefinition Height="*"/>
            <!-- 按钮 -->
        </Grid.RowDefinitions>

        <!-- 名称 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5">
            <Label Content="名称：" Width="70"/>
            <TextBox Text="{Binding Name}" Width="180"/>
        </StackPanel>

        <!-- 地址 -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <Label Content="IP / 地址：" Width="70"/>
            <TextBox Text="{Binding Address}" Width="180"/>
        </StackPanel>

        <!-- 用户名 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <Label Content="用户名：" Width="70"/>
            <TextBox Text="{Binding UserName}" Width="180"/>
        </StackPanel>

        <!-- 密码 -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
            <Label Content="密码：" Width="70"/>
            <PasswordBox x:Name="PasswordBoxPassword" Width="180"/>
        </StackPanel>

        <!-- 确定 / 取消 按钮 -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 左侧空白 -->
                <ColumnDefinition Width="Auto"/>
                <!-- 确定按钮 -->
                <ColumnDefinition Width="*"/>
                <!-- 左侧空白 -->
                <ColumnDefinition Width="Auto"/>
                <!-- 取消按钮 -->
                <ColumnDefinition Width="*"/>
                <!-- 右侧空白 -->
            </Grid.ColumnDefinitions>

            <!-- 确定按钮靠左 -->
            <Button Content="确定"
                    Width="50"
                    Height="30"
                    IsDefault="True"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Click="Ok_Click"/>

            <!-- 取消按钮靠右 -->
            <Button Content="取消"
                    Width="50"
                     Height="30"
                    IsCancel="True"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
